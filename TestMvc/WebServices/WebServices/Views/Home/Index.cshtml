@model IEnumerable<WebServices.Models.Reservation>

@{
    ViewBag.Title = "All Reservations";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Reservations</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Client Name</th>
                <th>Location</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ReservationId</td>
                    <td>@Html.ActionLink(item.ClientName, "Edit", new { item.ReservationId })</td>
                    <td>@item.Location</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Home"))
                        {
                            @Html.Hidden("ReservationId", item.ReservationId)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new reservation", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>

